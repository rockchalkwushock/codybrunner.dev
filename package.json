  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "next build",
    "commit": "git cz",
    "dev": "next",
    "format": "prettier --write",
    "lint": "eslint",
    "new": "plop",
    "postbuild": "next-sitemap",
    "prepare": "husky install",
    "start": "next start",
    "type-check": "tsc"
  },
  "dependencies": {
    "@appointlet/appointlet.js": "^3.0.6",
    "@tailwindcss/typography": "^0.4.0",
    "amplitude-js": "^8.2.1",
    "date-fns": "^2.21.3",
