{
  "name": "codybrunner.dev",
  "version": "1.0.0",
  "description": "My stretch of pipe in the world wide inter-tubes.",
  "author": {
    "email": "me@codybrunner.dev",
    "name": "Cody Brunner",
    "url": "https://codybrunner.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rockchalkwushock/codybrunner.dev.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  },
  "scripts": {
    "build": "next build && next-sitemap",
    "commit": "git cz",
    "dev": "next -p 4000",
    "format": "prettier --write",
    "lint": "next lint",
    "new": "plop",
    "prepare": "husky install",
    "start": "next start -p 4000",
    "type-check": "tsc"
  },
  "dependencies": {
    "@appointlet/appointlet.js": "~3.0.6",
    "@mapbox/rehype-prism": "~0.7.0",
    "@tailwindcss/typography": "~0.4.1",
    "@tryghost/content-api": "~1.5.10",
    "@tryghost/helpers": "~1.1.49",
    "@tryghost/string": "~0.1.19",
    "date-fns": "~2.23.0",
    "framer-motion": "~4.1.17",
    "next": "~11.0.1",
    "preact": "~10.5.14",
    "react": "~17.0.2",
    "react-dom": "~17.0.2",
    "react-feather": "~2.0.9",
    "react-query": "~3.19.1",
    "react-share": "~4.4.0",
    "reading-time": "~1.3.0",
    "rehype-autolink-headings": "~5.1.0",
    "rehype-slug": "~4.0.1",
    "sass": "~1.36.0"
  },
  "devDependencies": {
    "@commitlint/cli": "~13.1.0",
    "@commitlint/config-conventional": "~13.1.0",
    "@savvywombat/tailwindcss-grid-areas": "~1.3.2",
    "@types/node": "~16.4.5",
    "@types/react": "~17.0.15",
    "@types/react-dom": "~17.0.9",
    "@types/tryghost__content-api": "~1.3.7",
    "@typescript-eslint/eslint-plugin": "~4.28.5",
    "@typescript-eslint/parser": "~4.28.5",
    "autoprefixer": "~10.3.1",
    "commitizen": "~4.2.4",
    "cz-conventional-changelog": "~3.3.0",
    "dot-plop": "~0.4.1",
    "eslint": "~7.31.0",
    "eslint-config-next": "~11.0.1",
    "eslint-config-prettier": "~8.3.0",
    "husky": "~7.0.1",
    "lint-staged": "~11.1.1",
    "next-sitemap": "~1.6.140",
    "plop": "~2.7.4",
    "postcss": "~8.3.6",
    "postcss-import": "~14.0.2",
    "postcss-preset-env": "~6.7.0",
    "prettier": "~2.3.2",
    "rehype": "~11.0.0",
    "tailwindcss": "~2.2.7",
    "typescript": "~4.3.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "next",
      "prettier"
    ],
    "ignorePatterns": [
      "package.json",
      "vercel.json"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "react/display-name": "off"
    }
  },
  "lint-staged": {
    "*.+(js|json|md|mdx|ts|tsx|yml|yaml)": [
      "prettier --write"
    ],
    "*.+(js|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
