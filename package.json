    "mdx-bundler": "^4.0.0",
    "next": "^10.2.0",
    "next-themes": "^0.0.14",
    "next-transpile-modules": "^7.0.0",
    "preact": "^10.5.13",
    "prism-react-renderer": "^1.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-query": "^3.16.0",
    "react-share": "^4.4.0",
    "reading-time": "^1.3.0",
    "rehype-code-titles": "^1.0.3",
    "remark-emoji": "^2.2.0",
    "remark-external-links": "^8.0.0",
    "remark-gfm": "^1.0.0",
    "sass": "^1.32.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@rockchalkwushock/eslint-config": "^1.0.3",
    "@savvywombat/tailwindcss-grid-areas": "^1.3.2",
    "@types/amplitude-js": "^8.0.0",
    "@types/node": "^15.3.0",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "autoprefixer": "^10.2.5",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dot-plop": "^0.4.1",
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "next-sitemap": "^1.6.57",
    "plop": "^2.7.4",
    "postcss": "^8.2.15",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.0",
    "rehype": "^11.0.0",
    "tailwindcss": "^2.1.1",
    "typescript": "^4.2.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "@rockchalkwushock/eslint-config",
    "ignorePatterns": [
      "package.json",
      "vercel.json"
    ]
  },
  "lint-staged": {
    "*.+(js|json|md|mdx|ts|tsx|yml|yaml)": [
      "prettier --write"
    ],
    "*.+(js|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
